<window id="101">
    <defaultcontrol>10</defaultcontrol>
    <controls>
        <control type="group">
            <animation type="WindowOpen" condition="Window.IsVisible(3004) | Window.IsVisible(selectdialog) | Window.IsVisible(addonsettings)" reversible="false">
                <effect type="fade" start="0" end="100" time="5000" delay="3000" />
            </animation> 
            <control type="group">
		<animation type="WindowOpen">
                        <effect type="zoom"  end="60" time="0" tween="sine" easing="inout" center="auto" />
                	<effect type="fade" start="0" end="100" time="300" tween="sine" easing="in"  />
               		<effect type="slide" start="0,75" end="0,0" time="350" tween="cubic" easing="out" />
                </animation>
	        <animation type="WindowClose">
			<effect type="zoom"  end="80" time="0" tween="sine" easing="inout" center="auto" />
                	<effect type="fade" start="100" end="0" time="250" tween="sine" easing="out" />
                	<effect type="slide" start="0,0" end="0,75" time="300" tween="sine" easing="out" />
                </animation>
		<animation type="Conditional" condition="Control.HasFocus(1234)">
                	<effect type="slide" start="0" end="-1800" time="600" tween="sine" easing="out" />
                </animation>
                <include>KeyboardAnimations</include>
                <visible>!Window.IsVisible(virtualkeyboard) + !Window.IsVisible(selectdialog) + !Window.IsVisible(DialogSelect.xml) + !Window.IsVisible(yesnodialog) + !Window.IsVisible(okdialog)</visible>
                <control type="image">
                    <description>background image</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1920</width>
                    <height>1080</height>
                    <texture>panel/console settings.png</texture>
                </control>
                
                <control type="group">
                    <posx>877</posx>
                    <posy>458</posy>
		    <control type="multiimage">
                         <include></include>
                         <posx>-30</posx>
                        <posy>-30</posy>
                        <width>234</width>
                        <height>150</height>
                        <imagepath>dialogs/progress/loading/</imagepath>
		<timeperimage>80</timeperimage>
		<fadetime></fadetime>
		<pauseatend></pauseatend>
		<randomize></randomize>
		<loop>yes</loop>
        </control>
                </control>
                

                

                
                <control type="label" id="2">
                    <posx>800</posx>
                    <posy>240</posy>
                    <width>620</width>
                    <height>32</height>
                    <font>Font-Condensed-S45-B</font>
                    <textcolor>green</textcolor>
                    <shadowcolor></shadowcolor>
                    <align>left</align>
                </control>
                
>
                
                <control type="progress">
                    <description>Progressbar</description>
                    <posx>580</posx>
                    <posy>675</posy>
                    <width>740</width>
                    <height>30</height>
                    <info>System.Progressbar</info>
                    <aspectratio>stretch</aspectratio>
                    <lefttexture>dialogs/progress/progress-left.png</lefttexture>
                    <midtexture>dialogs/progress/progress-mid.png</midtexture>
                    <righttexture>dialogs/progress/progress-right.png</righttexture>
                    <texturebg>dialogs/progress/progress-back.png</texturebg>
                </control>
            </control>
        </control>
    </controls>
</window>