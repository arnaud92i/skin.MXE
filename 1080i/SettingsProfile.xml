					<control type="image">
						<posx>350</posx>
						<posy>250</posy>
						<width>100</width>
						<height>100</height>
					<texture fallback="Master user.png">$INFO[Skin.String(XBoxLive.Gamer.Picture)]</texture>
					</control>					
