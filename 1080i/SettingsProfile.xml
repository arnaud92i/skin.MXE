				<include>FullscreenDimensions</include>
				<texture>panel/console settings.png</texture>
			</control>		
		<include>NXE.XboxLive.GamerCard</include>
		<include>-</include>	
		<control type="group">		
			<visible>!Window.isVisible(130)</visible>		
			<!-- control.label (Profile Settings) -->
	<control type="label">
                 <posx>850</posx>
                 <posy>150</posy>
                 <width>382</width>
                 <height>100</height>
