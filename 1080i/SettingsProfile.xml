						<posy>370</posy>
						<posx>350</posx>
						<width>412</width>
						<font>font24_title</font>
						<info>ListItem.Label</info>
						<textcolor>darkgrey</textcolor>
						<align>left</align>
					</control>					
					<!-- control.label2 -->
					<control type="label">
						<posy>400</posy>
						<posx>350</posx>
						<width>412</width>
						<font>font13_title</font>
						<info>ListItem.Label2</info>
						<textcolor>grey</textcolor>
						<align>left</align>
					</control>				
					<!-- control.image.avatar -->
					<control type="image">
						<posy>100</posy>
						<posx>140</posx>
						<width>260</width>
						<height>620</height>
						<texture fallback="Avatar.png">$INFO[Skin.String(XBoxLive.Gamer.Avatar)]</texture> 
						<aspectratio>stretch</aspectratio>
					</control>				
					<!-- control.image.avatar.shadow -->
				<control type="image">
                                        <posx>140</posx>
                                        <posy>660</posy>
                                        <width>350</width>
                                        <height>70</height>
                                        <texture>avatarshadow.png</texture>
					</control>				
				</focusedlayout>			
			</control>
		</control>		
		<!-- control.group.buttons -->
		<control type="group" id="18">
			<posx>350</posx>
			<posy>920</posy>
			<visible>!Window.isVisible(130)</visible>			
