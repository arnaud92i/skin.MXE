                            <font>Font-Condensed-S50</font>
                        </control>
		     <control type="image">
                        <posx>1750</posx>
                        <posy>85</posy>
                        <width>55</width>
                        <height>55</height>
                        <texture>icon/xbox.png</texture>
                  </control>		
			<!-- control.fixedlist.profiles.container-->
			<control type="fixedlist" id="2">	
				<posy>150</posy>
				<posx>350</posx>
				<width>1376</width>
				<height>863</height>			
				<onup>300</onup>
				<ondown>4</ondown>
				<onleft>-</onleft>
				<onright>-</onright>
                        <viewtype label="Square">wrap</viewtype>
                         <scrolltime tween="cubic" easing="out">600</scrolltime>
                        <orientation>horizontal</orientation>
                        <preloaditems>4</preloaditems>
                        <focusposition>0</focusposition>				
			
				<itemlayout width="1000" height="300">					
					<!-- control.image.picture -->
					<control type="image">
						<posx>350</posx>
						<posy>250</posy>
						<width>100</width>
						<height>100</height>
				<texture fallback="Master user.png">$INFO[Skin.String(XBoxLive.Gamer.Picture)]</texture>
					</control>					
					<!-- control.label -->
					<control type="label">
						<posy>370</posy>
						<posx>350</posx>
						<width>412</width>
						<font>font24_title</font>
						<info>ListItem.Label</info>
						<textcolor>darkgrey</textcolor>
						<align>left</align>
					</control>					
					<!-- control.label2 -->
					<control type="label">
						<posy>400</posy>
						<posx>350</posx>
						<width>412</width>
						<font>font13_title</font>
						<info>ListItem.Label2</info>
						<textcolor>grey</textcolor>
						<align>left</align>
					</control>				
					<!-- control.image.avatar -->
					<control type="image">
						<posy>100</posy>
						<posx>140</posx>
						<width>260</width>
						<height>620</height>
						<texture fallback="Avatar.png">$INFO[Skin.String(XBoxLive.Gamer.Avatar)]</texture> 
						<aspectratio>stretch</aspectratio>
					</control>					
					<!-- control.image.avatar.shadow -->
				<control type="image">
                                        <posx>140</posx>
                                        <posy>660</posy>
                                        <width>350</width>
                                        <height>70</height>
                                        <texture>avatarshadow.png</texture>
					</control>			
				</itemlayout>				
